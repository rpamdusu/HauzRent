<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0CB61"
    android:orientation="vertical"
    tools:context=".ContinueActivity">

    <TextView
        android:id="@+id/HR_logo"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Welcome to HauzRent "
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:id="@+id/client_phone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:maxLength="11"
        android:background="#95FFFFFF"
        android:layout_marginHorizontal="20sp"
        android:hint="Phone Number "
        android:inputType="number"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="472dp" />
    <EditText
        android:id="@+id/bvn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:hint="BVN"

        android:background="#95FFFFFF"
        android:inputType="number"
        android:maxLength="12"
        android:singleLine="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="269dp" />

    <EditText

        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#95FFFFFF"
        android:singleLine="true"
        android:hint=" House Address"
        android:layout_marginVertical="20sp"
        android:layout_marginHorizontal="20sp"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/nextPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="#A30073FF"
        android:layout_marginVertical="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="638dp"
        android:layout_marginHorizontal="20sp"/>



</LinearLayout>