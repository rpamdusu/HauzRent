<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|clip_vertical|center_vertical"
    android:background="#F0CB61"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginVertical="20sp"
        android:background="#A8FFFFFF"
        android:paddingHorizontal="10px"
        android:layout_marginHorizontal="50px"
        android:hint="Firstname"
        android:singleLine="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="167dp" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Lastname"
        android:paddingHorizontal="10px"
        android:background="#95FFFFFF"
        android:singleLine="true"
        android:layout_marginHorizontal="50px"
        android:layout_marginVertical="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="50px"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_marginVertical="20sp"
        tools:layout_editor_absoluteX="2dp"
        android:background="#95FFFFFF"
        android:paddingHorizontal="10px"
        tools:layout_editor_absoluteY="304dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:background="#95FFFFFF"
        android:layout_marginHorizontal="50px"
        android:layout_marginVertical="20sp"
        android:paddingHorizontal="10px"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="121dp" />

    <Button
        android:id="@+id/press_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="40pt"
        android:text="Sign UP"
        android:layout_marginVertical="15sp"
        android:layout_marginHorizontal="50px"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="416dp" />

    <Button
        android:id="@+id/signIn_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingHorizontal="40pt"
        android:text="Sign In"
        android:layout_marginHorizontal="50px"
        android:layout_marginVertical="15sp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="416dp" />


</LinearLayout>